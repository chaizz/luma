{
  "manifest_version": 3,
  "name": "Luma - Intelligent Web Assistant",
  "version": "1.0.0",
  "description": "Summarize web content, generate mind maps, and chat with your browser.",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "src/assets/vue.svg",
      "48": "src/assets/vue.svg",
      "128": "src/assets/vue.svg"
    }
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "options_page": "src/options/index.html",
  "icons": {
    "16": "src/assets/vue.svg",
    "48": "src/assets/vue.svg",
    "128": "src/assets/vue.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ]
}